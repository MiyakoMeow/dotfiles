{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "compaction": {
    "auto": true,
    "prune": true,
  },
  "lsp": {
    "rust": {
      "disabled": true,
    },
  },
  "agent": {
    "build": {
      "permission": {
        "bash": "deny",
        "edit": "deny",
      },
    },
    "plan": {
      "permission": {
        "bash": "deny",
        "edit": "deny",
      },
    },
    "general": {
      "model": "zhipuai-coding-plan/glm-4.5-air",
    },
    "explore": {
      "model": "zhipuai-coding-plan/glm-4.5-air",
    },
  },
  "mcp": {
    "docs-rs": {
      "enabled": true,
      "type": "local",
      "command": [
        "deno",
        "run",
        "--no-lock",
        "--allow-net",
        "--allow-env",
        "--allow-sys",
        "npm:@nuskey8/docs-rs-mcp",
      ],
    },
    "package-registry": {
      "enabled": true,
      "type": "local",
      "command": [
        "deno",
        "run",
        "--no-lock",
        "--allow-net",
        "--allow-env",
        "--allow-sys",
        "npm:package-registry-mcp",
      ],
    },
    "web-reader": {
      "enabled": true,
      "type": "local",
      "command": [
        "deno",
        "run",
        "--no-lock",
        "--allow-net",
        "--allow-env",
        "--allow-sys",
        "npm:mcp-web-reader",
      ],
    },
  },
  "permission": {
    "docs-rs_*": "deny",
    "package-registry_*": "deny",
    "web-reader_*": "deny",
  },
}

